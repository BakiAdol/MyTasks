@model MyTasksClassLib.Models.ViewModels.RegisterModel

<div class="logRegContainer shadowAndBackground">
    <form asp-action="Registration" asp-controller="Account" 
        asp-route-returnUrl="@ViewData["returnUrl"]">

        <span asp-validation-for="Name" class="ErrorMessageText"></span>
        <input placeholder="Name" asp-for="Name" 
            class="textInputStyle inputTypeTextStyle" />

        <span asp-validation-for="Email" class="ErrorMessageText"></span>
        <input type="email" placeholder="Email" asp-for="Email" 
            class="textInputStyle inputTypeTextStyle" />

        <span asp-validation-for="Password" class="ErrorMessageText"></span>
        <input type="password" placeholder="Password" asp-for="Password" 
            class="textInputStyle inputTypeTextStyle" />

        <span asp-validation-for="ConfirmPassword" class="ErrorMessageText"></span>
        <input type="password" placeholder="Confirm Password" asp-for="ConfirmPassword"
               class="textInputStyle inputTypeTextStyle" />
        <div class="logregButtonContiner">
            <input type="submit" value="Register" class="inputTypeSubmitPrimary" />
        </div>
    </form>
</div>